{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@api": ["apps/admin/src/api/api"],
      "@assets": ["apps/admin/src/assets/index.ts"],
      "@types": ["apps/admin/src/types/index.ts"],
      "@context": ["apps/admin/src/context/index.ts"],
      "@const": ["apps/admin/src/const.ts"],
      "@hooks": ["apps/admin/src/hooks/index.ts"],
      "@utils": ["apps/admin/src/utils/index.ts"],
      "@components": ["apps/admin/src/components/index.ts"],
      "@features/*": ["apps/admin/src/features/*"],
      "@layout": ["apps/admin/src/layout/index.ts"],

      "@clientApi": ["apps/client/src/api/api"],
      "@clientAssets": ["apps/client/src/assets/index.ts"],
      "@clientHooks": ["apps/client/src/hooks/index.ts"],
      "@clientUtils": ["apps/client/src/utils/index.ts"],
      "@clientComponents": ["apps/client/src/components/index.ts"],
      "@clientFeatures/*": ["apps/client/src/features/*"],
      "@clientLayout": ["apps/client/src/layout/index.ts"],
      "@clientConst": ["apps/client/src/const.ts"],
      "@clientTypes": ["apps/client/src/types/index.ts"],
      "@clientContext": ["apps/client/src/context/index.ts"]
    }
  }
}
